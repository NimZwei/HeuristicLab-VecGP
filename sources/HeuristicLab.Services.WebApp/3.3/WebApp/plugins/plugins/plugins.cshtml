<div class="default-view-container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">WebApp Plugins</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-condensed">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Assembly</th>
                                <th>Last reload</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tr ng-repeat="plugin in plugins">
                            <td>{{$index + 1}}</td>
                            <td>{{plugin.Name}}</td>
                            <td>{{plugin.AssemblyName}}</td>
                            <td>{{plugin.LastReload}}</td>
                            <td>
                                <a ng-href="" data-ng-click="reloadPlugin(plugin.Name)">Reload</a>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>