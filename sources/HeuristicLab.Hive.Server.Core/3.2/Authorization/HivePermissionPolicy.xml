<?xml version="1.0" encoding="utf-8" ?>
<Policies>
  <Policy name="AccessClients">
    <Permission name="HivePermissions.Usermanagement.Client.Read"/>
  </Policy>
  <Policy name="AccessClientGroup">
    <Permission name="HivePermissions.Usermanagement.ClientGroup.Read"/>
  </Policy>
  <Policy name="AccessUserGroup">
    <Permission name="HivePermissions.Usermanagement.UserGroup.Read"/>
  </Policy>
  <Policy name="AccessProjects">
    <Permission name="HivePermissions.ResourceManagement.Project.Read"/>
  </Policy>
  <Policy name="DeleteProjects">
    <Permission name="HivePermissions.ResourceManagement.Project.Delete"/>
  </Policy>
  <Policy name="ChangeProjects">
    <Permission name="HivePermissions.ResourceManagement.Project.Update"/>
  </Policy>
  <Policy name="DeleteClientGroup">
    <Permission name="HivePermissions.Usermanagement.ClientGroup.Delete"/>
  </Policy>
  <Policy name="AccessJobs">
    <Permission priority="1" name="HivePermissions.Jobmanagement.Read.Any" context="Any"/>
    <Permission priority="2" name="HivePermissions.Jobmanagement.Read.ProjectOnly" context="Project"/>
    <Permission priority="3" name="HivePermissions.Jobmanagement.Read.OwnedOnly" context="User"/>
  </Policy>
  <Policy name="AddClientGroup">
    <Permission name="HivePermissions.Usermanagement.ClientGroup.Create"/>
  </Policy>
  <Policy name="AddJob">
    <Permission priority="1" name="HivePermissions.Jobmanagement.Create.Any" context="Any"/>
    <Permission priority="2" name="HivePermissions.Jobmanagement.Create.ProjectOnly" context="Project"/>
  </Policy>
  <Policy name="AddResource">
    <Permission priority="1" name="HivePermissions.Jobmanagement.Assign.ToAnyResource" context="Any"/>
    <Permission priority="2" name="HivePermissions.Jobmanagement.Assign.ToProject" context="Project"/>
  </Policy>
  <Policy name="AccessStatistics">
    <Permission priority="1" name="HivePermissions.Jobmanagement.Read.Any" context="Any"/>
    <Permission priority="2" name="HivePermissions.Jobmanagement.Read.ProjectOnly" context="Project"/>
    <Permission priority="3" name="HivePermissions.Jobmanagement.Read.OwnedOnly" context="User"/>
  </Policy>
  <Policy name="AccessJobResults">
    <Permission priority="1" name="HivePermissions.Jobmanagement.Read.Any" context="Any"/>
    <Permission priority="2" name="HivePermissions.Jobmanagement.Read.ProjectOnly" context="Project"/>
    <Permission priority="3" name="HivePermissions.Jobmanagement.Read.OwnedOnly" context="User"/>
  </Policy>
  <Policy name="AbortJob">
    <Permission priority="1" name="HivePermissions.Jobmanagement.Abort.Any" context="Any"/>
    <Permission priority="2" name="HivePermissions.Jobmanagement.Abort.ProjectOnly" context="Project"/>
    <Permission priority="3" name="HivePermissions.Jobmanagement.Abort.OwnedOnly" context="User"/>
  </Policy>

  <Policy name="RemoveJob">
    <Permission priority="1" name="HivePermissions.Jobmanagement.Delete.Any" context="Any"/>
    <Permission priority="2" name="HivePermissions.Jobmanagement.Delete.ProjectOnly" context="Project"/>
    <Permission priority="3" name="HivePermissions.Jobmanagement.Delete.OwnedOnly" context="User"/>
  </Policy>
  
</Policies>